doctype html
html(lang="pt-BR")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        //- Link para o nosso arquivo CSS compilado a partir do SASS.
        link(rel="stylesheet", href="/css/style.css")

        title= title || 'Championship Manager'

    body
        .page-container
            //- Header atualizado com navegação condicional
            header.header
                .header__brand
                        span Gerenciador de Campeonatos

                nav.header__nav
                    if user
                        //- Navegação para usuários logados
                        a(href="/dashboard") Dashboard
                        a(href="/teams") Minhas Equipes
                        a(href="/championships") Meus Campeonatos

                        //- O logout é um formulário para usar o método POST
                        form(action="/auth/logout" method="POST")
                            button.btn.btn--secondary.btn--small(type="submit") Sair
                    else
                        //- Navegação para visitantes
                        a.btn.btn--primary(href="/auth/login") Login / Registro

            //- O main agora tem a classe container para centralizar o conteúdo.
            main.container
                //- Bloco de conteúdo que será injetado pelas outras views.
                block content
