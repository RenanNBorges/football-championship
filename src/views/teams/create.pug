extends ../layouts/main

block content
    .form-container
        h1.page-header__title Nova Equipe
        p Preencha as informações abaixo para criar uma nova equipe.

        if errors && errors.length > 0
            .alert.alert--error
                ul
                    each error in errors
                        li= error

        form(method="POST" action="/teams")
            .form-group
                label(for="name") Nome da Equipe
                input(type="text" id="name" name="name" required)

            .form-grid
                .form-group
                    label(for="primaryColor") Cor Primária
                    input(type="color" id="primaryColor" name="primaryColor" value="#ffffff" required)
                .form-group
                    label(for="secondaryColor") Cor Secundária
                    input(type="color" id="secondaryColor" name="secondaryColor" value="#000000" required)

            .form-grid
                .form-group
                    label(for="attackLevel") Ataque (1-10)
                    input(type="number" id="attackLevel" name="attackLevel" min="1" max="10" required)
                .form-group
                    label(for="midfieldLevel") Meio-Campo (1-10)
                    input(type="number" id="midfieldLevel" name="midfieldLevel" min="1" max="10" required)
                .form-group
                    label(for="defenseLevel") Defesa (1-10)
                    input(type="number" id="defenseLevel" name="defenseLevel" min="1" max="10" required)
                .form-group
                    label(for="resistanceLevel") Resistência (1-10)
                    input(type="number" id="resistanceLevel" name="resistanceLevel" min="1" max="10" required)

            .form-grid
                .form-group
                    label(for="country") País
                    input(type="text" id="country" name="country" required)
                .form-group
                    label(for="continent") Continente
                    select(id="continent" name="continent" required)
                        option(value="" disabled selected) Selecione...
                        each continent in continents
                            option(value=continent)= continent

            .form-actions
                a.btn.btn--secondary(href="/teams") Cancelar
                button.btn.btn--primary(type="submit") Criar Equipe
